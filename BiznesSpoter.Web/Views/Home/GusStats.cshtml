@model BiznesSpoter.Web.Models.ViewModels.GusStatsViewModel

@{
    ViewData["Title"] = "Statystyki GUS";
}

<div class="container py-5 text-center">
    <h1 class="display-5 fw-bold mb-4">Dane demograficzne</h1>

    @if (Model != null)
    {
        <div class="card shadow-sm mx-auto" style="max-width: 500px;">
            <div class="card-body p-5">
                <h2 class="card-title text-primary mb-3">@Model.CityName</h2>
                <hr />
                <div class="my-4">
                    <p class="text-muted small text-uppercase mb-1">Liczba mieszkańców</p>
                    <h3 class="fw-bold">@((Model.Population.HasValue) ? Model.Population.Value.ToString("N0") : "—")</h3>
                </div>
                
                <div class="alert alert-light border mt-4">
                    <small>Dane pochodzą z Banku Danych Lokalnych GUS (Rok: @Model.Year)</small>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning mx-auto" style="max-width: 600px;">
            Nie udało się znaleźć danych dla podanego miasta. Upewnij się, że wpisujesz poprawną nazwę (mianownik), np. "Poznań".
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-link">Wróć na stronę główną</a>
    </div>
</div>
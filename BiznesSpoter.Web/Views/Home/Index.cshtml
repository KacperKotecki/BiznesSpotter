@{
    ViewData["Title"] = "Strona Główna";
}
<link rel="stylesheet" href="~/css/home-index.css" asp-append-version="true" />
<!-- 1. Sekcja Hero -->
<div class="hero-section shadow-sm">
    <div class="container">
        <h1 class="display-4 fw-bold">Znajdź idealne miejsce na swój biznes</h1>
        <p class="lead mb-4">Analiza lokalizacji, potencjału klientów i konkurencji w jednym miejscu.</p>
    </div>
</div>

<!-- 2. Główny Formularz (Search Box) -->
<div class="container search-container mb-5">
    <div class="card shadow border-0">
        <div class="card-body p-4">
            <form asp-controller="Home" asp-action="Search" method="get">
                <div class="row g-3">

                    <!-- Lokalizacja -->
                    <div class="col-lg-4 col-md-6">
                        <label for="locationInput" class="form-label fw-bold">Lokalizacja</label>
                        <input type="text" class="form-control form-control-lg" id="locationInput" name="location"
                            placeholder="Np. Warszawa, Mokotów">
                        <div class="form-text">Wpisz miasto lub dzielnicę.</div>
                    </div>

                    <!-- Branża -->
                    <div class="col-lg-4 col-md-6">
                        <label for="industrySelect" class="form-label fw-bold">Branża</label>
                        <select class="form-select form-select-lg" id="industrySelect" name="industry">
                            <option selected disabled>Wybierz kategorię...</option>
                            <optgroup label="Uroda i zdrowie">
                                <option value="fryzjer">Usługi fryzjerskie</option>
                                <option value="kosmetyczka">Salon kosmetyczny</option>
                                <option value="Tatuaż i piercing">Tatuaż i piercing</option>
                                <option value="Siłownia i fitness">Siłownia i fitness</option>
                                <option value="Stomatologia">Stomatologia</option>
                                <option value="Fizjoterapia">Fizjoterapia</option>
                            </optgroup>
                            <optgroup label="Gastronomia">
                                <option value="kebab">Kebab / Fast Food</option>
                                <option value="pizza">Pizza / Fast Food</option>
                                <option value="Cukiernia">Cukiernia</option>
                                <option value="Piekarnia">Piekarnia</option>
                                <option value="Pub">Pub</option>
                                <option value="Bar">Bar</option>
                                <option value="kawiarnia">Kawiarnia</option>
                                <option value="restauracja">Restauracja</option>
                            </optgroup>
                            <optgroup label="Handel">
                                <option value="spożywczy">Sklep spożywczy</option>
                                <option value="odzież">Butik odzieżowy</option>
                                <option value="zabka">Franczyza (typu Żabka)</option>
                                <option value="Sklep zoologiczny">Sklep zoologiczny</option>
                                <option value="Sklep monopolowy">Sklep monopolowy</option>
                                <option value="Odzież i tekstylia">Odzież i tekstylia</option>
                            </optgroup>
                            <optgroup label="Usługi lokalne">
                                <option value="mechanik">Warsztat samochodowy</option>
                                <option value="myjnie samochodowe">Myjnie samochodowe</option>
                                <option value="Pralnie">Pralnie</option>
                                <option value="weterynarz">Weterynarz</option>
                                <option value="Szewstwo">Szewstwo</option>
                                <option value="Elektronika">Elektronika</option>
                            </optgroup>
                            <optgroup label="Edukacja">
                                <option value="Szkoła Językowa">Szkoła Językowa</option>
                                <option value="Szkoła Jazdy">Szkoła Jazdy</option>
                            </optgroup>
                        </select>
                    </div>

                    <!-- Promień analizy (Slider) -->
                    <div class="col-lg-4 col-md-12">
                        <label for="radiusRange" class="form-label fw-bold d-flex justify-content-between">
                            Promień analizy
                            <span id="radiusValue" class="badge bg-primary">1.0 km</span>
                        </label>
                        <input type="range" class="form-range" min="0.5" max="5.0" step="0.5" id="radiusRange"
                            name="radius" value="1.0" oninput="updateRadius(this.value)">
                        <div class="d-flex justify-content-between text-muted small">
                            <span>0.5 km</span>
                            <span>5 km</span>
                        </div>
                    </div>

                    <!-- Przycisk -->
                    <div class="col-12 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold py-3">
                            <i class="bi bi-search me-2"></i> Analizuj potencjał
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- 3. Sekcja "Szybki Wybór" -->
<div class="container py-5">
    <div class="text-center mb-4">
        <h3 class="fw-bold text-secondary">Szybki wybór popularnych branż</h3>
    </div>

    <div class="row g-4 justify-content-center">
        <!-- Fryzjer -->
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card h-100 text-center p-3 category-card shadow-sm">
                <div class="card-body">
                    <div class="category-icon">✂️</div>
                    <!-- Można zamienić na <i class="bi bi-scissors"></i> jeśli masz Bootstrap Icons -->
                    <h5 class="card-title">Fryzjer</h5>
                    <p class="card-text small text-muted">Wysoki popyt lokalny.</p>
                    <a href="#" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <!-- Gastronomia -->
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card h-100 text-center p-3 category-card shadow-sm">
                <div class="card-body">
                    <div class="category-icon">🍔</div> <!-- Można zamienić na ikonę -->
                    <h5 class="card-title">Gastronomia</h5>
                    <p class="card-text small text-muted">Restauracje i fast-food.</p>
                    <a href="#" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <!-- Sklep -->
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card h-100 text-center p-3 category-card shadow-sm">
                <div class="card-body">
                    <div class="category-icon">🛒</div> <!-- Można zamienić na ikonę -->
                    <h5 class="card-title">Sklep spożywczy</h5>
                    <p class="card-text small text-muted">Codzienne zakupy.</p>
                    <a href="#" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <!-- Biuro -->
        <div class="col-6 col-md-4 col-lg-3">
            <div class="card h-100 text-center p-3 category-card shadow-sm">
                <div class="card-body">
                    <div class="category-icon">💼</div> <!-- Można zamienić na ikonę -->
                    <h5 class="card-title">Biuro / Usługi</h5>
                    <p class="card-text small text-muted">Księgowość, IT, Prawo.</p>
                    <a href="#" class="stretched-link"></a>
                </div>
            </div>
        </div>

        <!-- 4. Sekcja Testowa GUS (Tymczasowa) -->
        <div class="container py-5 border-top">
            <div class="row justify-content-center text-center">
                <div class="col-md-8">
                    <h3 class="fw-bold mb-3">Sprawdź potencjał demograficzny (GUS)</h3>
                    <p class="text-muted mb-4">Wpisz nazwę miasta, aby pobrać oficjalne dane o ludności z Banku Danych
                        Lokalnych.</p>

                    <form asp-action="GusStats" method="get" class="d-flex gap-2 justify-content-center">
                        <input type="text" name="city" class="form-control w-50" placeholder="Np. Wrocław" required>
                        <button type="submit" class="btn btn-outline-primary">Pobierz dane GUS</button>
                    </form>
                </div>
            </div>
        </div>




    </div>
</div>

@section Scripts
{
    <script src="~/js/home-index.js" asp-append-version="true"></script>
}
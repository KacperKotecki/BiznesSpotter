@model List<BiznesSpoter.Web.Models.PlaceResult>

@{
    ViewData["Title"] = "Wyniki wyszukiwania";
}

<div class="container py-5">
    <h2 class="mb-4">Znalezione miejsca</h2>
    <p>Liczba wyników: @Model.Count</p>
    <a asp-action="Index" class="btn btn-secondary mb-3">Wróć do wyszukiwania</a>

    @if (Model.Count == 0 || Model == null)
    {
        <div class="alert alert-warning">Nie znaleziono żadnych miejsc dla podanych kryteriów.</div>
    }
    else
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Nazwa</th>
                    <th>Adres</th>
                    <th>Ocena</th>
                    <th>Liczba opinii</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var place in Model)
                {
                    <tr>
                        <td class="fw-bold">@place.Name</td>
                        <td>@place.FormattedAddress</td>
                        <td>
                            @if(place.Rating.HasValue)
                            {
                                <span class="badge bg-success">@place.Rating <i class="bi bi-star-fill"></i></span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>@(place.UserRatingsTotal ?? 0)</td>
                        <td>@place.BusinessStatus</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>